    <configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Support multiple-JVM writing to the same log file -->
        <prudent>true</prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/recommend-middleman/rec.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>15</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>


        <appender name="FEEDBACK" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- Support multiple-JVM writing to the same log file -->
            <prudent>true</prudent>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/data/recommend-middleman/rec.feedback.%d{yyyy-MM-dd}.log</fileNamePattern>
            </rollingPolicy>
            <encoder>
                <pattern>%msg%n</pattern>
            </encoder>
        </appender>

        <logger name="recommend.service.RecommendFeedbackLogger" level="info" additivity="false">
            <appender-ref ref="FEEDBACK"/>
        </logger>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>

</configuration>
